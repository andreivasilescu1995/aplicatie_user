<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.paymentHistory.PaymentHistoryFragment"
    android:orientation="horizontal"
    android:background="@drawable/payment_fragment_background">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/payment_recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/no_payments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_payment_history"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"/>

</RelativeLayout>